<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pink_background</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="hello_user">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textColor">@color/muted_pink</item>
    </style>

    <style name="cv_action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">20dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
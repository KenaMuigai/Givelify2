<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dc_image2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:contentDescription="@string/donation_centre_image"
        android:padding="10dp"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <TextView
        android:id="@+id/dc_name2"
        tools:text="@tools:sample/lorem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:padding="10dp"
        android:textSize="24sp">

    </TextView>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/dc_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/dark_pink"
            app:tabSelectedTextColor="@color/dark_pink"/>

    </androidx.viewpager2.widget.ViewPager2>
</LinearLayout>